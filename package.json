{
  "name": "@porto/monorepo",
  "private": true,
  "type": "module",
  "workspaces": ["app", "examples/*", "playground", "src", "expo-webauthn"],
  "scripts": {
    "build": "yarn clean && tsc --project ./tsconfig.build.json",
    "build:contracts": "forge build --config-path ./contracts/foundry.toml",
    "changeset:prepublish": "yarn build && tsx ./scripts/prepublish.ts",
    "changeset:publish": "yarn changeset:prepublish && changeset publish",
    "changeset:version": "changeset version && yarn format",
    "check": "biome check . --fix --unsafe",
    "check:build": "tsx ./scripts/prepublish.ts && publint --strict ./src && attw --pack ./src --profile esm-only",
    "check:knip": "knip --production",
    "check:repo": "sherif",
    "check:size": "size-limit",
    "check:types": "tsc --noEmit",
    "clean": "rm -rf src/_dist src/Chains src/Porto src/wagmi ./tsconfig.build.tsbuildinfo src/tsconfig.build.tsbuildinfo",
    "deps": "yarn dlx taze -r",
    "dev": "yarn preconstruct && yarn workspace playground dev",
    "dev:wagmi": "yarn preconstruct && yarn workspace wagmi-example dev",
    "format": "biome format --write",
    "postinstall": "yarn preconstruct",
    "preconstruct": "tsx ./scripts/preconstruct.ts",
    "prepare": "yarn simple-git-hooks"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.1",
    "@biomejs/biome": "^1.8.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@size-limit/preset-big-lib": "^11.1.6",
    "@tanstack/react-query": "*",
    "@types/node": "^22.5.4",
    "@types/react": "*",
    "@wagmi/cli": "^2.1.18",
    "expo": "*",
    "knip": "^5.30.6",
    "publint": "^0.2.12",
    "react": "*",
    "react-dom": "*",
    "react-native": "*",
    "sherif": "^0.11.0",
    "simple-git-hooks": "^2.11.1",
    "size-limit": "^11.1.6",
    "tsx": "^4.17.0",
    "typescript": "*",
    "viem": "*",
    "wagmi": "*"
  },
  "resolutions": {
    "@tanstack/react-query": "^5.59.20",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.4",
    "viem": "^2.21.51",
    "wagmi": "^2.12.30",
    "react-native": "^0.76.5",
    "expo": "^52.0.23"
  },
  "packageManager": "yarn@4.5.0",
  "engines": {
    "node": ">=22"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn check"
  },
  "knip": {
    "entry": ["src/{index,actions,query,wagmi}.ts!"],
    "project": ["src/**"],
    "ignore": ["src/internal/**", "src/generated.ts"],
    "ignoreDependencies": ["@tanstack/react-query", "react", "wagmi"]
  },
  "size-limit": [
    {
      "name": "import * from 'ox'",
      "path": "./src/_dist/index.js",
      "import": "*",
      "limit": "54 kB"
    }
  ]
}
